<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Edit Blog</title>
</head>
<body>
    <%- include('./partials/script') %>
    <%- include('./partials/nav') %>
    <h3 class="container mt-3">Edit your blog</h3>
    <div class="container mt-3">
        <form method="POST" action="/editBlog/<%= blog._id %>" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" aria-describedby="titleHelp" value="<%= blog.title %>">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" name="description" rows="2"><%= blog.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" name="body" rows="10"><%= blog.body %></textarea>
            </div>
            
            <div class="mb-3">
                <label for="coverImage" class="form-label">Upload Cover Image</label>
                <input class="form-control" type="file" name="coverImage" value="<%= blog.coverImageUrl %>">
            </div>
            <label for="status" class="form-label">Status</label>
            <div class="mb-2" name="status">
                <label class="btn btn-success mb-3">
                    <input type="radio" name="status" value="PUBLISHED" checked> 
                    <i class="fas fa-check-circle"></i> Publish
                </label>
                <label class="btn btn-warning mb-3">
                    <input type="radio" name="status" value="DRAFT"> 
                    <i class="far fa-file-alt"></i> Draft
                </label>
            </div>
            
            <!-- Other form elements -->
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    
    <%- include('./partials/footer') %>
</body>
</html>
