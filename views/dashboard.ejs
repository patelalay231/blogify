<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>User Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        body {
            background-color: #f8f9fa;
        }
        .blog-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            margin-bottom: 20px;
            background-color: #fff;
            padding: 20px;
        }
        .blog-card:hover {
            transform: translateY(-5px);
        }
        .blog-title {
            color: #333;
            font-weight: bold;
        }
        .blog-info {
            color: #666;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body>
    <%- include('./partials/script') %>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h2>User Dashboard</h2>
                <% if (!Array.isArray(userBlogs) || userBlogs.length === 0) { %>
                    <p>No blogs published yet.</p>
                <% } else { %>
                    <% userBlogs.forEach(blog => { %>
                        <div class="blog-card">
                            <h5 class="blog-title"><%= blog.title %></h5>
                            <p class="blog-info">Likes: <%= blog.likes.length %> | Dislikes: <%= blog.dislikes.length %> | Views: <%= blog.viewsCount %> | Status: <%= blog.status %></p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View Blog</a>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>
</body>
</html>
